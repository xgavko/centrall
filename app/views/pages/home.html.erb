<% content_for(:home) %>

<div class="wrapper">
   <%= inline_svg "logo.svg", class: "logo-white" %>
</div>


<% if user_signed_in? && current_user.events.any? %>
<div class="container-create-event">
  <div class="create-event">
    <h1> My events </h1>
  </div>

<div class='event-slate'>
  <div class="title-event">
    <div class="svg-glass">
      <%= inline_svg('glass.svg') %>
    </div>
    <%#each %>
      <h5><%#=event.name %></h5>
  </div>

  <div class="title-event">
    <div class="date">
      <h6> 15/03/2019</h6>
    </div>
    <div class="status">
      <h5>Open</h5>
    </div>
  </div>
</div>

<div class='event-slate'>
    <div class="title-event">
      <div class="svg-glass">
        <%= inline_svg('glass.svg') %>
      </div>
      <h5> Anniv Michou</h5>
    </div>

  <div class="title-event">
    <div class="date">
      <h6> 15/03/2019</h6>
    </div>
    <div class="status">
      <h6>Closed</h6>
    </div>
  </div>
</div>


  <div class='event-slate'>
    <div class="title-event">
      <div class="svg-glass">
        <%= inline_svg('glass.svg') %>
      </div>
      <h5> Afterwork</h5>
    </div>


    <div class="title-event">
    <div class="date">
      <h6> 15/03/2019</h6>
    </div>
    <div class="status">
      <h6>Closed</h6>
    </div>
  </div>
</div>

  <%= link_to "Create event", new_event_path, class: "btn btn-primary btn-block" %>

<% else %>
  <div class="container text-center">
    <h2 class=''> Hello !</h2>
    <%= inline_svg('Party.svg') %>
    <p> Tous vos events que vous créer ou auxquels vous participez apparaîtront ici </p>

    <%= link_to "Create event", new_event_path, class: "btn btn-primary btn-block" %>
    <hr>
    </div>
  </div>
<% end %>

