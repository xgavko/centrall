<h1>Boarding</h1>

<div class="container">
  <h5>PARTICIPANTS</h5>
  <% event.participations.each do |participation| %>
    <div class="participant">
      <div class="">
        <img src="https://api.adorable.io/avatars/285/nicolas" class="avatar mr-2">
        <span><%= participation.user.username.capitalize %></span>
      </div>
      <div class='p-3'>
        <% if participation.pending? %>
          <%= inline_svg('question-mark.svg') %>
        <% elsif participation.accepted? %>
          <%= inline_svg('check.svg') %>
        <% else %>
          <%= inline_svg('times.svg') %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% participation = Participation.where(user: current_user, event: event).first %>
  <h4 class='text-center'>Are you joining?</h4>
  <div class="row">
    <div class="col-4">
      <%= link_to participation_declineds_path(participation), method: :post do %>
        <a href="#" class="btn btn-light btn-block"><%= inline_svg('times.svg') %></a>
      <% end %>
    </div>
    <div class="col-8">
        <a href="#" class="btn btn-primary btn-block" id="launch-geoloc"><%= inline_svg('tick.svg') %></a>
    </div>
    </div>

  <div class=''>
    <h4 class='text-center'>Where will you be?</h4>
      <%= simple_form_for participation, url: participation_accepteds_path(participation), method: :post do |f| %>
      <div class="input-group flex-nowrap">
        <%= f.input_field :address, error: 'Not a valid address' %>
        <div class="input-group-append">
          <a href="#" class="btn btn-secondary" id="geoloc"><%= inline_svg('gps.svg') %></a>
        </div>
      </div>
    <% end %>


    <input type="submit" class="btn btn-primary btn-block">
    </div>
</div>
